---
import { Image } from "astro:assets"
import portafolio_image from "src/img/proyectos/Portafolio.png"
---

<section class="trabajos">
    <h2 class="subtitulo_de_proyectos">Proyectos</h2>

    <trabajos>
        <!-- CARD -->
        <div class="card">
            <div class="card_image">
                <Image src={portafolio_image} title="Portafolio" class="portafolio_img portafolio_img_tamaño" alt="Portafolio" />
            </div>
            <div class="card_info_container">
                <div class="descripccion">
                    <h3 class="card_title">Portafolio</h3>
                    <div class="visitar_container">
