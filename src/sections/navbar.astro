---
import ProgrammingLogo from "@/components/programmingLogo.astro"
---

<section class="navbar">
    <nav class="nav">
        <a href="https://youtub" class="link_logo">
            <ProgrammingLogo />
        </a>
        <ul class="nav_ul">
            <li class="nav_list_item">
                <a href="#" class="nav_link">Inicio</a>
            </li>
            <li class="nav_list_item">
                <a href="#" class="nav_link">Sobre mi</a>
            </li>
            <li class="nav_list_item">
                <a href="#" class="nav_link">Proyectos</a>
            </li>
        </ul>
    </nav>
</section>

<style>

    .navbar{
        width: 100%;
        height: 60px;
        background-color: #000;
    }

    .nav{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    ul{
        margin: 0;
        padding: 0;
        list-style: none;
        cursor: default;
    }

    .nav_list_item{
        display: inline-block;
        margin-top: 10px;
        margin-right: 20px;
    }

    .nav_link{
        text-decoration: none;
        color: #fff;
        cursor: pointer;
        transition: border-bottom 100ms;
    }
    .nav_link:hover{
        border-bottom: 2px solid;
    }

    .link_logo{
        cursor: pointer;
    }

</style>