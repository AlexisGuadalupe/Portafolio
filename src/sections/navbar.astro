import ProgrammingLogo from "@/components/programmingLogo.astro"
---

<section class="navbar">
    <nav class="nav">
        <a href="https://youtub" class="link_logo">
            <ProgrammingLogo />
        </a>
        <ul class="nav_ul">
            <li class="nav_list_item">
                <a href="#" class="nav_link">Inicio</a>
            </li>
            <li class="nav_list_item">
                <a href="#" class="nav_link">Sobre mi</a>
            </li>
            <li class="nav_list_item">
                <a href="#" class="nav_link">Proyectos</a>
            </li>
        </ul>
        <a onclick="openNav()" class="menu" href="#">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" stroke="#fff" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" data-icon="SvgMenu" aria-hidden="true"><path d="M3 12h18M3 6h18M3 18h18"></path></svg>
        </a>
    </nav>

    <div class="navbar_mobile" id="navbar_mobile">
        <a onclick="closeNav()" class="close" href="#">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" stroke="#fff" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" data-icon="SvgMenu" aria-hidden="true"><path d="M3 12h18M3 6h18M3 18h18"></path></svg>
        </a>
        <div class="navbar_menu">
            <a href="" class="navbar_link link">Inicio</a>
            <a href="" class="navbar_link link">Sobre mi</a>
            <a href="" class="navbar_link link">Proyectos</a>
        </div>
    </div>

    <script type="text/javascript">
        function openNav(){
            document.getElementById("navbar_mobile").style.width = "100%";
        }

        function closeNav(){
            document.getElementById("navbar_mobile").style.width = "0%";
        }
    </script>
</section>

<style>

    .navbar{
        width: 100%;
        height: 90px;
        background: linear-gradient(#000000 50%, #00000000);
        position: fixed;
        z-index: 10;
        top: 0;
        left: 0;
    }

    .nav{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    ul{
        margin: 0;
        padding: 0;
        list-style: none;
        cursor: default;
    }

    .nav_list_item{
        display: inline-block;
        margin-top: 10px;
        margin-right: 20px;
    }

    .nav_link{
        text-decoration: none;
        color: #fff;
        cursor: pointer;
        transition: border-bottom 100ms;
    }
    .nav_link:hover{
        border-bottom: 2px solid;
    }

    .link_logo{
        cursor: pointer;
        margin-top: 5px;
    }

    @media (max-width: 500px) {
        .nav_list_item{
            display: none;
        }
    }

    /* Ressponssive */

    .link{
        text-decoration: none;
    }

    .navbar_mobile{
        height: 100%;
        width: 0%;
        position: fixed;
        z-index: 20;
        left: 0;
        top: 0;
        background-color: #ffffffd6;
        overflow: hidden;
        transition: all 0.3s;
        font-size: 50px;
    }

    .navbar_menu{
        display: flex;
        height: 100%;
        gap: 30px;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        
    }

    .menu svg{
        margin-top: 10px;
        margin-right: 20px;
    }

    .close{
        position: absolute;
        right: 45px;
        top: 24px;   
